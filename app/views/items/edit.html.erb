<h1>Editing item</h1>

<% form_for(@item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :categoria_id %><br />
    <%= f.text_field :categoria_id %>
  </p>
  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label :metrica %><br />
    <%= f.text_field :metrica %>
  </p>
  <p>
    <%= f.label :atendimento %><br />
    <%= f.check_box :atendimento %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

