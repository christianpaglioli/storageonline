<h1>Listing familias</h1>

<table>
  <tr>
    <th>Nome</th>
  </tr>

<% @familias.each do |familia| %>
  <tr>
    <td><%=h familia.nome %></td>
    <td><%= link_to 'Show', familia %></td>
    <td><%= link_to 'Edit', edit_familia_path(familia) %></td>
    <td><%= link_to 'Destroy', familia, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New familia', new_familia_path %>